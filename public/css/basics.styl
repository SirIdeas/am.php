// -----------------------------------------------------------------------------
// Botones
// -----------------------------------------------------------------------------
$generateButton(
  $buttonSelector = '.btn',
  $raisedSelector = '.btn-raised',
  $fabSelector = '.btn-fab',
  $miniSelector = '.btn-mini',
  $iconSelector = '.btn-icon')
  {$buttonSelector}
    border-radius           3px
    user-select             none
    position                relative
    outline                 0
    border                  0
    display                 inline-block
    align-items             center
    padding                 0 6px
    line-height             36px
    min-height              36px
    min-width               88px
    background              0 0
    white-space             nowrap
    letter-spacing          .01em
    text-align              center
    text-transform          uppercase
    font-weight             500
    text-decoration         none
    cursor                  pointer
    overflow                hidden
    &:not([disabled]):hover
      background-color      rgba(158,158,158,0.2)
    &[disabled]
      cursor                not-allowed
      background-color      rgba(0,0,0,0)
      color                 rgba(0,0,0,0.26)
    &{$fabSelector}
      width                 48px
      height                48px
      line-height           48px
      border-radius         50%
      min-width             0
      padding               0
      {$iconSelector}
        max-height          100%
        max-width           100%
        padding             20%
      &{$miniSelector}
        line-height         40px
        width               40px
        height              40px
    &{$raisedSelector}
      &:not([disabled])
        box-shadow          0 2px 5px 0 rgba(0,0,0,.26)
        &:active
          box-shadow        0 4px 8px 0 rgba(0,0,0,.4)
      &[disabled]
        background-color    rgba(0,0,0,0.12)