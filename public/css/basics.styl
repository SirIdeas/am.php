@import nib

// -----------------------------------------------------------------------------
// mixins
// -----------------------------------------------------------------------------
$setBackground($color)
  background-color          $color
  color                     white if dark($color)
  color                     black if !dark($color)


// -----------------------------------------------------------------------------
// Vertical align
// -----------------------------------------------------------------------------
$verticalAlignChilds($pos)
  &:before
    content                 ' '
    height                  100%
  &:before
  >*
    display                 inline-block
    vertical-align          $pos
    
// -----------------------------------------------------------------------------
// Principales
// -----------------------------------------------------------------------------
$clear()
  *
    box-sizing              border-box
    color                   inherit

  html
  body
    position                relative
    font-size               16px
    font-family             Arial, 'Helvetica Neue', sans-serif;
    margin                  0
    padding                 0
    
  a
    text-decoration         none

  ul,ol
    padding-left            40px
    
  table
    font-size               16px
  
  th
    font-weight             bold
  
  thead th
    text-align              center
      
  td,th
    vertical-align          middle
    
  p
    line-height             1.8

  .text-center
    text-align              center
    
  .text-left
    text-align              left
    
  .text-right
    text-align              right
    
  .pull-right
    float                   right
    
  .pull-left
    float                   left
    
  .scrollable
    overflow                auto
    
  .inner
    padding                 10px
    
// -----------------------------------------------------------------------------
// Estilos para tablas
// -----------------------------------------------------------------------------
$generateTableStyles($color, $tableClass = '.table', $tableResponsiveClass = '.table-responsive')
  {$tableResponsiveClass}
    overflow-x: auto
    
  {$tableClass}
    margin-top              10px
    width                   100%
    border-collapse         collapse
      
    td,th
      padding               10px 1.2em
    
    thead
      td,th
        border-bottom       1px solid lightness($color, 90%)
    
    &.striped
      tbody
        tr:nth-of-type(odd)
          $setBackground    lightness($color, 97.5%)
    
    &.bordered
      td,th
        border-bottom       1px solid lightness($color, 90%)

// -----------------------------------------------------------------------------
// Clearfix
// -----------------------------------------------------------------------------
$clearfix()
  &:after
  &:before
    content               " "
    display               table
  &:after
    clear                 both

// -----------------------------------------------------------------------------
// Grid
// -----------------------------------------------------------------------------
// 320px, iPhone4, iPhone5, Lumia520, Lumia N9
// 360px, BB Z30, Nexus5, Galaxy Note3/Note2/S3/S44
// 375px, iPhone6
// 384px, Nexus4, Optimus L70
// 412px, Nexus6
// 414px, iPhone6 plus
// 600px, BB Play Book, Nexus7
// 768px, iPad
// 800px, Nexus10
// 1280px, Laptop MDPI, Laptop Touch
// 1440px, Laptop HiDPI
// 1600px, Amazon Kindle
$generateGrid($numSections = 12, $contentCls = 'content', $rowCls = 'row', $colCls = 'col', $constantCls = 'col', $offsetCls = 'os', $hideCls = 'hide', $screens = {
    'c': 0,
    'v': 512px,
    's': 768px,
    'm': 1024px,
    'l': 1280px,
    'x': 1440px,
    'xx': 1600px,
    'xxx': 1780px,
  })
  
  // Content en general
  .{$contentCls}
    margin                  0 auto
    
  // Estilos filas
  .{$rowCls}
    $clearfix()
  
  // Estilos Columnas
  .{$colCls}
    display                 inline-block
    float                   left
    box-sizing              border-box
  
  for $screenClass, $value in $screens
    $minWidth = $value + 32px
    @media screen and (min-width: $minWidth)
      
      if $value
        // Content max-width
        .{$contentCls}
          max-width         $value
        
        // Ocultar elementos
        .{$hideCls}-{$screenClass}
          display           none
              
      for $i in (1..$numSections)
        
        // Columnas
        .{$screenClass}{$i}
          width             $i*(100 / $numSections)*1%
          
        // Width fijo
        if $constantCls
          if $value
            .{$constantCls}{$i}
            .{$constantCls}-{$screenClass}{$i}
              width             $i*($value / $numSections)
        
        // Margen anterior
        if $offsetCls
          .{$offsetCls}-{$screenClass}{$i}
            margin-left     $i*(100 / $numSections)*1%

// -----------------------------------------------------------------------------
// Colores
// -----------------------------------------------------------------------------
$generatePallete($selector, $colors)

  if($colors[''])
    {$selector}
      $setBackground        $colors['']
    
  for $name, $color in $colors
    {$selector}.bg{$name}
      $setBackground        $color

